    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@prisma/client": "^6.10.0",
    "@types/node": "^20.11.17",
    "prisma": "^6.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
