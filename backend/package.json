{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/domain/__tests__ src/application/__tests__",
    "test:integration": "bun test src/infrastructure/__tests__ src/interfaces/__tests__",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "bun src/infrastructure/database/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:test:setup": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/kanban_test\" prisma migrate deploy",
    "db:test:reset": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/kanban_test\" prisma migrate reset --force"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.835.0",
    "@aws-sdk/credential-providers": "^3.835.0",
    "@hono/node-server": "^1.14.4",
    "@kanban/domain-core": "workspace:*",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11",
    "jose": "^6.0.11",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@prisma/client": "^6.10.0",
    "@types/node": "^20.11.17",
    "bun-types": "^1.2.16",
    "prisma": "^6.10.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
