{
  "name": "@kanban/domain-core",
  "version": "1.0.0",
  "description": "Kanban application domain entities and business logic",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "swc src -d dist --copy-files && tsc --emitDeclarationOnly",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "dev": "swc src -d dist --copy-files --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "keywords": [
    "kanban",
    "domain",
    "ddd",
    "clean-architecture"
  ],
  "author": "Kanban Team",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.9",
    "@types/bun": "^1.1.18",
    "bun-types": "^1.2.16",
    "chokidar": "^4.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {},
  "dependencies": {}
}